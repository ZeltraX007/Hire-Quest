  </div>
  
<div class="col-md-5">
  <input type="tel" class="form-control" id="number" name="phone" placeholder="Mobile Number" value="{{this.phone}}"required>
</div>
  <div class="col-5">
    <input type="email" class="form-control" id="email" name="email"placeholder="Email" value="{{this.email}}" required>
  </div>
  <div class="col-md-5">
    <label for="DOB" class="form-label">Date of Birth</label>
    {{!-- <input type="date" class="form-control" id="DOB" name="DOB" value="<%= student.Dob.toISOString().slice(0, 10)%>" required> --}}
  </div>
  <div class="col-md-5">
    <label for="Graduation" class="form-label">Year of Graduation</label>
    {{!-- <input type="date" class="form-control" id="Graduation" name="graduation"  value="<%= student.Graduation.toISOString().slice(0, 10)%>"required> --}}
  </div>
  <div class="col-10">
    <input type="text" class="form-control" id="address" name="address"placeholder="Address" value="{{this.Address}}" required>
  </div>
  <div class="col-md-4">
    <input type="text" class="form-control" id="state" name="state"placeholder="State" value="{{this.state}}"required>
  </div>
  <div class="col-md-4">
    <input type="text" class="form-control" id="city" name="city"placeholder="City" value="{{this.city}}"required>
  </div>
  <div class="col-md-2" required>
    <input type="number" class="form-control" id="zip" value="{{this.zip}}"placeholder="Zip Code" required>
  </div>
  <div class="col-12">
    <div class="form-check">
    </div>
  </div>
  <div class="col-3">
    <a href="data:application/pdf;base64,{{this.Resume}}" target="_blank">View Resume</a><br>
  </div>
  <div class="col-md-9">
    <label for ="cv">Upload Resume</label>
    <input type="file" id ="cv"class="form-control-file" name="cv"  value="data:application/pdf;base64,{{this.Resume}}" required>
  </div>
  <div class="col-8">
    <button type="submit" class="btn btn-primary">UPDATE</button>
  </div>
