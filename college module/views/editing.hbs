<div style="text-align: center; padding-left: 10%; padding-right: 10%;"class="fixed-top"><h2>Edit Student Details</h2></div>
<div style="text-align: center; padding-left: 20%; padding-right: 10%;padding-top: 5%;">
  {{#each students}}
    <form class="row g-3" action="/update" method="post" enctype="multipart/form-data">
      <div class="col-md-10">
        <input type="text" class="form-control" id="id" name="id" value="{{this.student_id}}" disable >
      </div>
  <div class="col-md-10">
    <input type="text" class="form-control" id="name" name="name" placeholder="Full Name" value="{{this.name}}" required >
  </div>
  <div class="col-md-10">
